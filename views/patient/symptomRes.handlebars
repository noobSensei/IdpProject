{{> _patientNav}}
<!-- end of navbar -->

<!-- patient table -->
<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xl-10 col-lg-9 col-md-8 ml-auto mt-4">
        <div class="pt-md-5 mt-md-3 mb-5 col-xl-12">
          <div class="container">
            <h3 class="text-info font-weight-bold text-center mb-3">Symptom Checker Result</h3> 
          </div>
          <div class="col-12 rounded"  style="border:0px solid grey;">
            <!-- Search box -->
            
            {{#each rpts}}
            <div class="card mb-3">
              <div class="card-header">
                {{diseaseId.name}}
                <div class="progress">
                  <div class="progress-bar bg-info" role="progressbar" style="width: {{floor probability}}%" aria-valuenow={{probability}} aria-valuemin="0" aria-valuemax="100">{{floor probability}}%</div>
                </div>
              </div>
              <div class="card-body">
                <h5 class="card-title">Treatment</h5>
                <p class="card-text">{{diseaseId.treatment}}</p>
              </div>
            </div> 

            {{else}}
            <div class="container">
              <h3 class="text-info">No Match Found</h3>                 
            </div>



            {{/each}}
            <!-- End of SearchBox               -->

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- end of table -->



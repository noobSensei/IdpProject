    </main>

    <form class="msger-inputarea" id="message_form" method="post">
      <input type="text" id="msg" class="msger-input" placeholder="Enter your message...">
      <input type="submit" id="send-message" class="msger-send-btn" value="Send Message">
    </form>
  </section>

  
</div>

</div>
</div>

<section>
  <div class="container-fluid">
    <div class="row flex justify-content-center">
      <div class="col-xl-10 col-lg-9 col-md-8 ml-auto mt-4">
        <div class="pt-md-5 mt-md-3 mb-5 col-xl-12">
          {{> _message}}

          <div class="col-12 text-center">
            <input type="hidden" id="name-user" value="{{userName}}">
            <input type="hidden" id="name-receiver" value="{{receiver}}">

            <section class="msger">
              <header class="msger-header">
                <div class="msger-header-title">
                  <i class="fas fa-comment-alt"></i>{{receiver}}
                </div>
              </header>

              <main class="msger-chat" id="chat">
                {{#gt "{{length messages}}" '0'}}
                {{#each messages}}
                {{#eq senderName userName}}
                <div class="msg left-msg">
                  <div class="msg-bubble">
                    <div class="msg-info">
                      <div class="msg-info-name">{{receiverName}}</div>
                    </div>

                    <div class="msg-text">
                      {{message}}
                    </div>
                  </div>
                </div>

                {{else}}
                <div class="msg left-msg">
                  <div class="msg-bubble">
                    <div class="msg-info">
                      <div class="msg-info-name">{{senderName}}</div>
                    </div>

                    <div class="msg-text">
                      {{message}}
                    </div>
                  </div>
                </div>


                {{/eq}}
                {{/each}}
                {{/gt}}
